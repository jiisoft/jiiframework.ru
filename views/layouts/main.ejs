<%
"use strict";

/** @typedef {String} content */
/** @this {Jii.view.WebView} */
(function() {

app.assets.AppAsset.register(this);
%>
<!DOCTYPE html>
<html lang="<%= Jii.app.language %>">
<head>
    <meta charset="<%- Jii.app.charset %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico" />
    <title><%- this.title ? this.title + ' — ' : '' %>Jii Framework</title>
    <%= this.head() %>
</head>
<body>
<%= this.beginBody() %>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/"><span>Jii</span> Framework</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/">Главная</a></li>
                <li><a href="/guide">Мануал</a></li>
                <li><a href="/development">Разработчикам</a></li>
                <li><a href="https://github.com/jiisoft" target="_blank">GitHub</a></li>
                <li><a href="/contact">Контакты</a></li>
                <li class="download">
                    <a href="/guide/start-installation">
                        <span class="glyphicon glyphicon glyphicon-download"></span>
                        Версия v<%- Jii.getVersion() %>
                    </a>
                </li>
            </ul>
            <% this.registerJs(function() {
                var hrefRule = location.pathname === '/' ? '="/"' : '^="' + location.pathname + '"';
                jQuery('#navbar a[href' + hrefRule + ']').parent('li:not(.download)').addClass('active');
            }) %>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<%= content %>

<footer class="container">
    &copy; 2015 Jii Software
</footer>

<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-61025104-1', 'auto');
    ga('send', 'pageview');
</script>
<%= this.endBody() %>
</body>
</html>

<% }).call(this) %>